{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA/**",
        "$DOCUMENT/**",
        "$DOWNLOAD/**",
        "$HOME/**",
        "$RESOURCE/**",
        "$TEMP/**",
        "$DESKTOP/**"
      ]
    }
  ]
}
